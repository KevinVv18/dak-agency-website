---
/**
 * OpinionFeature — 2-column opinion section (image left, content right)
 */
import type { WPPost } from '../../lib/wp-api';
import { getFeaturedImage, getFeaturedImageAlt, getAuthor, getPrimaryCategory, getCategoryTagClass, formatDateLong, stripHtml } from '../../lib/wp-api';

interface Props {
  post: WPPost;
}

const { post } = Astro.props;
const image = getFeaturedImage(post);
const imageAlt = getFeaturedImageAlt(post);
const author = getAuthor(post);
const category = getPrimaryCategory(post);
const tagClass = getCategoryTagClass(category.slug);
const date = formatDateLong(post.date);
const title = stripHtml(post.title.rendered);
const excerpt = stripHtml(post.excerpt.rendered);
---

<section class="opinion-section" id="opinion">
  <div class="section-divider-full"></div>
  <div class="section-container">
    <div class="section-header">
      <h2 class="section-title">Opinión</h2>
      <a href="/blog/categoria/opinion" class="section-link">VER MÁS »</a>
    </div>
    <div class="opinion-layout">
      <div class="opinion-image-col">
        <a href={`/blog/${post.slug}`}>
          <div class="opinion-image-wrapper">
            <img src={image} alt={imageAlt} loading="lazy">
          </div>
        </a>
      </div>
      <div class="opinion-content-col">
        <span class={`category-tag ${tagClass}`}>{category.name.toUpperCase()}</span>
        <h2 class="opinion-title">
          <a href={`/blog/${post.slug}`}>{title}</a>
        </h2>
        <p class="opinion-excerpt">{excerpt}</p>
        <div class="opinion-meta">
          <span>{date}</span>
          <span class="meta-separator">·</span>
          <span>POR {author.toUpperCase()}</span>
        </div>
        <a href={`/blog/${post.slug}`} class="opinion-read-more">LEER MÁS</a>
      </div>
    </div>
  </div>
</section>
